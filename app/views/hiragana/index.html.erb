<div class="hiragana-container">
  <h1>Learning Japanese Hiragana</h1>
  
  <div class="score-display">
    <p>Score: <strong><%= @score %></strong> / <strong><%= @total %></strong></p>
    <% if @total > 0 %>
      <p>Accuracy: <strong><%= (@score.to_f / @total * 100).round(1) %>%</strong></p>
    <% end %>
    <%= button_to "Reset Score", reset_hiragana_path, method: :post, class: "btn-reset" %>
  </div>

  <div class="chart-section">
    <h2>Hiragana Chart Reference</h2>
    <div class="hiragana-chart">
      <% 
        rows = [
          [['あ', 'a'], ['い', 'i'], ['う', 'u'], ['え', 'e'], ['お', 'o']],
          [['か', 'ka'], ['き', 'ki'], ['く', 'ku'], ['け', 'ke'], ['こ', 'ko']],
          [['さ', 'sa'], ['し', 'shi'], ['す', 'su'], ['せ', 'se'], ['そ', 'so']],
          [['た', 'ta'], ['ち', 'chi'], ['つ', 'tsu'], ['て', 'te'], ['と', 'to']],
          [['な', 'na'], ['に', 'ni'], ['ぬ', 'nu'], ['ね', 'ne'], ['の', 'no']],
          [['は', 'ha'], ['ひ', 'hi'], ['ふ', 'fu'], ['へ', 'he'], ['ほ', 'ho']],
          [['ま', 'ma'], ['み', 'mi'], ['む', 'mu'], ['め', 'me'], ['も', 'mo']],
          [['や', 'ya'], ['', ''], ['ゆ', 'yu'], ['', ''], ['よ', 'yo']],
          [['ら', 'ra'], ['り', 'ri'], ['る', 'ru'], ['れ', 're'], ['ろ', 'ro']],
          [['わ', 'wa'], ['', ''], ['を', 'wo'], ['', ''], ['ん', 'n']],
          [['きや', 'kya'], ['', ''], ['きゆ', 'kyu'], ['', ''], ['きよ', 'ko']]
        ]
      %>
      <% rows.each do |row| %>
        <div class="chart-row">
          <% row.each do |char, romaji| %>
            <% if char.present? %>
              <div class="chart-cell">
                <div class="hiragana-char"><%= char %></div>
                <div class="romaji"><%= romaji %></div>
              </div>
            <% else %>
              <div class="chart-cell empty"></div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="quiz-section">
    <h2>Practice Quiz</h2>
    <%= link_to "Start Quiz", quiz_hiragana_path, class: "btn-quiz" %>
  </div>
</div>

